<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:buttonStyle">@style/ButtonSopra</item>

    </style>


    <style name="AppTheme.Dark">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
    <style name="AppTheme.Dark.EditText">
        <item name="android:textColorHint">?android:textColorHintInverse</item>
    </style>

    <style name="AppTheme.Dark.Text">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AppTheme.Dark.Text.Important">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    <style name="AppTheme.Light.EditText">
        <item name="android:textColorHint">?android:textColorHint</item>
    </style>

    <style name="AppTheme.Light.Text">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AppTheme.Light.Text.Important">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="AppTheme.Light.Text.ListItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:alpha">0.87</item>

    </style>

    <style name="ButtonSopra" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/default_materialish_btn</item>
        <item name="android:height">36dip</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>

        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


</resources>
