<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:buttonStyle">@style/ButtonSopra</item>

        <item name="android:colorButtonNormal">@color/sopra_accent_ripple</item>
    </style>

    <style name="ButtonSopra" parent="android:style/Widget.Material.Light.Button">
        <item name="android:elevation">1dp</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:height">36dp</item>
        <item name="android:translationZ">1dp</item>
    </style>
</resources>